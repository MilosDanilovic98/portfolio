<script>
  import {gsap} from "gsap";

  let target = document.querySelectorAll(".killMe");

  const observer = new IntersectionObserver((entrie) => {

    entrie.forEach((element) => {

      if (
        element.isIntersecting
      ) {

          gsap.to(element.target,{left:0,duration:2,ease: "elastic.out(1,1)",force3D: true})

          // element.target.classList.add("floatIn")
          // element.target.classList.remove("floatOut")
      }
      else {
          // element.target.classList.add("floatOut")
          // element.target.classList.remove("floatIn")
          gsap.to(element.target,{left:"45%",duration:2, ease: "elastic.out(1,1)",force3D: true})

      }

    });
  },{
      threshold:0.4,
  });

  target.forEach((target) => {
    observer.observe(target);
  });
</script>

