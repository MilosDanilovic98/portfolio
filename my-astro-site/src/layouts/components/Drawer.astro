<div
  class="drawer md:hidden fixed test top-[3rem] h-screen r-10 w-0 z-50 drop-shadow-3xl overflow-hidden"
>
  <input id="my-drawer" type="checkbox" class="drawer-toggle" />
  <div class="drawer-side">
    <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"
    ></label>
    <ul
      class="menu fixed pt-[4rem] p-4 w-80 h-full flex bg-drawerBackground text-base-content"
    >
      <li>
        <a
          href="/"
          class="hover:cursor-pointer text-xl p-4 link-underline link-underline-black"
          >Home</a
        >
      </li>

      <li>
        <a
          href="#aboutSection"
          onclick="test()"
          class="hover:cursor-pointer text-xl p-4 link-underline link-underline-black"
          >About me</a
        >
      </li>
      <li>
        <a
          href="#projectSection"
          onclick="test()"
          class="text-xl hover:cursor-pointer p-4 link-underline link-underline-black"
          >Projects</a
        >
      </li>
      <li>
        <a
          href="/allBlogs/"
          class="text-xl hover:cursor-pointer p-4 link-underline link-underline-black"
          >Blogs</a
        >
      </li>
      <li>
        <a
          class="text-xl hover:cursor-pointer p-4 link-underline link-underline-black"
          >Contact</a
        >
      </li>
    </ul>
  </div>
</div>

<script is:inline>
  const test = () => {
    document.querySelector("#drawerIcon").checked =
      !document.querySelector("#drawerIcon").checked;

    document.querySelector("#my-drawer").checked =
      !document.querySelector("#my-drawer").checked;
  };
</script>

