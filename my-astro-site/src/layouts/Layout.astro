---
import Navbar from "./components/Navbar.astro";
import Footer from "./components/Footer.astro";
import "../global.css";
import Drawer from "./components/Drawer.astro";
import { ViewTransitions } from "astro:transitions";
---

<html id="root" lang="en" ">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="preload"
      href="/src/public/fonts/BebasKai.otf"
      as="font"
      type="font/otf"
      crossorigin
    />
    <link
      rel="preload"
      href="/src/public/fonts/InriaSans-Light.ttf"
      as="font"
      type="font/ttf"
      crossorigin
    />
    <link
      rel="preload"
      href="/src/public/fonts/Syne-Italic.otf"
      as="font"
      type="font/otf"
      crossorigin
    />
    <link
      rel="preload"
      href="/src/public/fonts/RobotoCondensed-VariableFont_wght.ttf"
      as="font"
      type="font/ttf"
      crossorigin
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
    <!--<ViewTransitions/>-->
  </head>
  <body class="bg-white text-dark font-mainFont">
    <Navbar />

    <slot />

    <Footer />
  </body>
</html>
